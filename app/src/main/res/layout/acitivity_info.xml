<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ActivityInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageButton
                    android:src="@drawable/brotrip_icon_info_white_50"
                    android:id="@+id/activity_info_imageButton_basic_info"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:text="basic"/>

            <ImageButton
                    android:src="@drawable/brotrip_icon_shopping_white_dp50"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/activity_info_imageButton_purchases_info"
                    android:layout_weight="1"/>

            <ImageButton
                    android:src="@drawable/brotrip_icon_gasstation_white_dp50"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/activity_info_imageButton_refuel_info"
                    android:layout_weight="1"/>
            <ImageButton
                    android:src="@drawable/brotrip_icon_combo_chart_white_50"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/activity_info_imageButton_consumption_info"
                    android:layout_weight="1"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>
    </LinearLayout>

</FrameLayout>