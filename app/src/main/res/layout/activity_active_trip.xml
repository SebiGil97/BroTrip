<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActiveTrip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_active_trip_textView_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="30sp" />

            <Button
                android:id="@+id/activity_active_trip_persons"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="persons" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_weight="0.1"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/activity_active_trip_shopping"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="shopping"/>

            <Button
                    android:id="@+id/activity_active_trip_refuel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="Refuel"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_weight="0.1"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/activity_active_trip_map"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="map"/>

            <Button
                    android:id="@+id/activity_active_trip_info"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="info"/>

        </LinearLayout>

        <Button
                android:id="@+id/activity_active_trip_settings"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="0.05"
                android:text="settings"/>
    </LinearLayout>
</FrameLayout>