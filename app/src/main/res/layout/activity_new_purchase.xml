<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewPurchase">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/new_purchase_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="new purchase"
            android:textSize="24sp"
            android:layout_marginBottom="20dp"/>

        <TextView
                android:id="@+id/new_purchase_textView_where"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="shop"
                android:textSize="18sp"/>

        <EditText
                android:id="@+id/new_purchase_edit_text_where"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="50dp"/>

        <TextView
                android:id="@+id/new_purchase_textView_paid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="price" android:textSize="18sp"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">
            <EditText
                    android:id="@+id/new_purchase_edit_text_paid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textSize="18sp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"/>
            <TextView
                    android:text="â‚¬"
                    android:layout_width="50dp"
                    android:layout_height="match_parent" android:id="@+id/textView13" android:layout_weight="0"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"/>
        </LinearLayout>

        <Spinner
            android:id="@+id/activity_purchase_pick_payer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/new_purchase_button_save_purchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAVE" />

    </LinearLayout>
</FrameLayout>