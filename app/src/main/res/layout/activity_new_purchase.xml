<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewPurchase">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/new_purchase_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="new purchase"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/new_purchase_textView_where"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Where?" />

        <EditText
                android:id="@+id/new_purchase_edit_text_where"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="18sp"/>

        <TextView
            android:id="@+id/new_purchase_textView_paid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="paid" />

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                    android:id="@+id/new_purchase_edit_text_paid"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textSize="18sp"/>
            <TextView
                    android:text="â‚¬"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/textView13" android:layout_weight="1"
                    android:textSize="18sp"/>
        </LinearLayout>

        <Spinner
            android:id="@+id/activity_purchase_pick_payer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/new_purchase_button_save_purchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAVE" />

    </LinearLayout>
</FrameLayout>