<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp" app:srcCompat="@drawable/googleg_disabled_color_18"
                    android:id="@+id/list_persons_imageView_person"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/list_persons_name"
                    android:textSize="30sp"
                    android:paddingLeft="20dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="paid refuels: "
                    android:layout_width="90dp"
                    android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="0"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/list_persons_number_refuels"
                    android:layout_weight="1"/>
            <TextView
                    android:text="paid purchases: "
                    android:layout_width="110dp"
                    android:layout_height="wrap_content" android:id="@+id/textView9" android:layout_weight="0"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/list_persons_number_purchases"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="refuels total:"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_weight="0"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/list_persons_refuels_total"
                    android:layout_weight="1"/>
            <TextView
                    android:text="purchases total:"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content" android:id="@+id/textView10" android:layout_weight="0"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/list_persons_purchase_total"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="paid total: "
                    android:layout_width="180dp"
                    android:id="@+id/textView11" android:textSize="24sp" android:layout_height="wrap_content"
                    android:layout_weight="0"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/list_persons_paidTotal"
                    android:textSize="24sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="surplus/deficit:"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content" android:id="@+id/textView8" android:layout_weight="0"
                    android:textSize="24sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" android:id="@+id/list_persons_surplus"
                    android:layout_weight="1"
                    android:textSize="24sp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>